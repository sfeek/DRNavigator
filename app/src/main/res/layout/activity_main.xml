<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/destLat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/destLat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination Latitude"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/destLong_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/destLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination Longitude"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/currentLat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/currentLat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Latitude"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>\

            <android.support.design.widget.TextInputLayout
                android:id="@+id/currentLong_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/currentLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Longitude"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/destHeading_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/destHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination Heading"
                    android:inputType="none"
                    android:focusable="false"
                    android:text="0.0"
                    android:background="@color/blue"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/destDistance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/destDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination Distance"
                    android:inputType="none"
                    android:focusable="false"
                    android:text="0.0"
                    android:background="@color/blue"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/updateButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#0f0"
                android:text="@string/update_label"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/headingNew_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/headingNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Heading"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/truemag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/distanceNew_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/distanceNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Distance"
                    android:selectAllOnFocus="true"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/paces_feet_meters"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/paceDistance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <EditText
                    android:id="@+id/paceDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Distance of One Pace"
                    android:selectAllOnFocus="true"
                    android:text="2.7"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/pace_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/declination_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <EditText
                    android:id="@+id/declination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Magnetic Declination"
                    android:selectAllOnFocus="true"
                    android:text="0.0"
                    android:inputType="numberSigned|numberDecimal"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/waypoints_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">

                <EditText
                    android:id="@+id/waypoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Waypoints"
                    android:selectAllOnFocus="true"
                    android:inputType="textMultiLine"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/clearButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/clear_label" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
